.rootView_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.feedback_edit {
    width: 600rpx;
    height: 200rpx;
    background-color: #EFEFF4;
    border-radius: 30rpx;
    padding: 30rpx;
    color: #333;
    font-size: 30rpx;
}

.choose_image_container {
    margin-left: 100rpx;
    width: 100%;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
}

.choose_default_image {
    width: 150rpx;
    height: 150rpx;
}

.submit_button {
    color: #333;
    width: 500rpx;
    margin-top: 100rpx;
}

.reply_container {
    margin-top: 100rpx;
    margin: 50rpx;
    display: flex;
    flex-direction: column;
}

.reply_item_container {
    border-radius: 30rpx;
    padding: 20rpx;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    background-color: #EFEFF4;
}

.feedback_content {
    color: #666;
    font-size: 30rpx;
}

.reply_content {
    margin-top: 5rpx;
    color: #333;
    font-size: 30rpx;
}

.feedback_hint {
    margin-top: 100rpx;
    color: #8B4513;
    font-size: 27rpx;
}