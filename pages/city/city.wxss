.rootView_container {
    display: flex;
    flex-direction: column;
}

.search_container {
    display: flex;
    align-items: center;
    justify-content: center;
}

.search_edit {
    width: 650rpx;
    height: 80rpx;
    background-color: #EFEFF4;
    border-radius: 30rpx;
    padding-left: 20rpx;
    color: #333;
    font-size: 30rpx;
}

.list_container {
    margin-top: 20rxp;
    margin-left: 40rpx;
    width: 100%;
    height: 1100rpx;
    display: flex;
    flex-direction: column;
}

.list_item_container {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 10rpx;
    border-bottom-color: #EFEFF4;
}

.city_text {
    font-size: 35rpx;
    color: #333;
}

.city_parent_text {
    margin-left: 20rpx;
    font-size: 25rpx;
    color: #666;
}

.location_history_container {
    width: 100%;
    display: flex;
    margin-left: 40rpx;
    flex-direction: column;
}

.location_container {
    margin-top: 20rpx;
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.location_icon {
    margin-left: 10rpx;
    margin-right: 25rpx;
    width: 33rpx;
    height: 40rpx;
}

.search_history_container {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.history_icon {
    margin-top: 20rpx;
    width: 60rpx;
    height: 60rpx;
}

.search_history_container2 {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    width: 600rpx;
}

.search_history_item {
    color: #333;
    margin-right: 20rpx;
    margin-top: 20rpx;
    font-size: 35rpx;
    text-align: center;
    padding-left: 15rpx;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
    padding-right: 15rpx;
    border: 0.5rpx solid #EFEFF4;
    border-radius: 10rpx;
}