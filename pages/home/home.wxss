.image_bg {
    position: absolute;
    width: 100%;
    height: 1000rpx;
    background-color: #00BFFF;
}
.image_bg2 {
    position: absolute;
    width: 100%;
    height: 1000rpx;
    background-color:#000;
    opacity: 0.3;
}

.picture {
    position: absolute;
    right: 1rpx;
    width: 80rpx;
    height: 80rpx;
    padding: 25rpx;
    margin-top: 5rpx;
}

.image_content {
    position: absolute;
    width: 100%;
    height: 1000rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.image_parent {
    position: relative;
    width: 100%;
    height: 1000rpx;
}

.content_nav_bar {
    margin-top: 20rpx;
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.location_container {
    display: flex;
    flex: row;
    margin-top: 10rpx;
    align-items: center;
}

.location_icon {
    width: 35rpx;
    height: 35rpx;
    margin-right: 5rpx;
}

.location_text {
    color: #fff;
    font-size: 35rpx;
    font-weight: 800;
}
.location_text2 {
    color: #fff;
    font-size:15rpx;
    font-weight:500;
    margin-top: 25rpx;
}

.current_date {
    color: #fff;
    font-weight: 400;
    margin-top: 30rpx;
    font-size: 30rpx;
}

.current_weather_container {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    padding-bottom: 100rpx;
}

.warm_tip {
    color: #fff;
    font-size: 40rpx;
    text-align: center;
}

.current_temperature {
    margin-top: 100rpx;
    color: #fff;
    font-size: 170rpx;
}

.current_cond_container {
    display: flex;
    margin-top: 70rpx;
    height: 50rpx;
    flex-direction: row;
    align-items: center;
}

.current_cond_txt {
    color: #fff;
    font-weight: 700;
    font-size: 40rpx;
}

.current_cond_icon {
    margin-left: 10rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 30rpx;
    background-color: #fff;
}

.current_wind {
    margin-top: 110rpx;
    font-size: 35rpx;
    font-weight: 700;
    color: #fff;
}

.hourly_container {
    width: 100%;
    height: 300rpx;
    overflow: hidden;
    white-space: nowrap;
}

.hourly_item_container {
    width: 150rpx;
    margin-right: 10rpx;
    height: 100%;
    display: inline-block;
}

.hourly_item_container2 {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.hourly_item_time {
    font-size: 27rpx;
    color: #fff;
    font-weight: 700;
}

.hourly_item_temperature_icon1 {
    margin-top: 20rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 30rpx;
    background-color: #fff;
}

.hourly_item_temperature_icon2 {
    width: 40rpx;
    height: 40rpx;
    border-radius: 30rpx;
    background-color: #fff;
}

.hourly_item_temperature {
    margin-top: 20rpx;
    font-size: 30rpx;
    padding-left: 12rpx;
    color: #fff;
    font-weight: 700;
}

.hourly_item_wind {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #fff;
    font-weight: 700;
}

.forecast_container1 {
    margin-top: 50rpx;
